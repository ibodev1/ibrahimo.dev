---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';

interface Props {
  title: string;
  description: string;
  publishDate: Date;
  tags: string[];
  slug: string;
}

const { title, description, publishDate, tags, slug } = Astro.props;

const formatDate = (date: Date) => {
  return Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<Card className={`group transition-all duration-300 hover:scale-[1.01] hover:shadow-lg`}>
  <CardHeader>
    <div class={`flex items-center justify-between`}>
      <span class="text-muted-foreground text-sm">
        {formatDate(publishDate)}
      </span>
    </div>
    <CardTitle className="text-xl">
      {title}
    </CardTitle>
    <CardDescription className="text-base">
      {description}
    </CardDescription>
  </CardHeader>
  <CardContent>
    <div class="flex items-center justify-between">
      <div class="flex gap-2">
        {tags.map((tag) => <Badge variant="outline">{tag}</Badge>)}
      </div>
      <Button variant="ghost" size="sm" className="transition-transform hover:scale-105">
        <a href={`/blog/${slug}`}>Read More â†’</a>
      </Button>
    </div>
  </CardContent>
</Card>

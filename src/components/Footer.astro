---
import { socialMedias } from '@/consts';

const currentYear = new Date().getFullYear();
---

<footer class="border-border/40 mt-20 border-t">
  <div class="container mx-auto max-w-4xl px-4 py-8">
    <div class="flex flex-col items-center justify-between md:flex-row">
      <p class="text-muted-foreground text-sm">Â© {currentYear} Ibrahim Odev</p>
      <div class="mt-4 flex items-center space-x-4 md:mt-0">
        {
          socialMedias.map((media) => (
            <a
              href={media.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground transition-colors"
              title={media.title}
            >
              <media.icon class="h-5 w-5" />
              <span class="sr-only">{media.title}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>

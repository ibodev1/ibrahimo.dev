---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="mb-16 text-center">
  <h1 class="mb-4 text-4xl font-bold md:text-5xl">{title}</h1>
  <p class="text-muted-foreground mx-auto max-w-2xl text-xl">
    {description}
  </p>
</div>

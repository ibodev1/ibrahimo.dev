---
import { Home, User, Text } from "lucide-astro";

const listItems = [
  {
    title: "Home",
    icon: Home,
    href: "/",
  },
  {
    title: "About",
    icon: User,
    href: "/about",
  },
  {
    title: "Blog",
    icon: Text,
    href: "/blog",
  },
];
---

<div class="fixed bottom-10 left-1/2 transform -translate-x-1/2">
  <nav>
    <ul class="flex items-center justify-center gap-2 bg-dark-600 rounded-lg overflow-hidden">
      {
        listItems.map((item) => {
          return (
            <li>
              <a href={item.href} class="min-w-[80px] min-h-[70px] max-w-[80px] max-h-[70px] p-2 flex items-center justify-center flex-col hover:bg-dark-400 transition-all">
                {<item.icon />}
                <p class="font-semibold mt-0.5">{item.title}</p>
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</div>

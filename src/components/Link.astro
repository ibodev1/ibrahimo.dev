---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
---

<a
  href={href}
  class:list={[
    className,
    'bg-primary text-light py-2 px-4 rounded-lg font-semibold hover:bg-primary-600 active:bg-primary-700 transition-all duration-200 ease-in-out inline-flex items-center'
  ]}
  {...props}
>
  <slot />
</a>

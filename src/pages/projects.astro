---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/main.astro';
import PageHeader from '@/components/PageHeader.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import SkillsOverview from '@/components/SkillsOverview.astro';

const allProjects = await getCollection('projects');
---

<Layout
  title="Projects - Ibrahim | Web Applications & Solutions"
  description="Web applications and solutions built with modern technologies including React, Next.js, Node.js, TypeScript, and TailwindCSS."
>
  <!-- Main Content -->
  <div class="container mx-auto max-w-4xl px-4 py-16">
    <PageHeader title="Projects" description="Web applications and solutions built with modern technologies" />

    <!-- All Projects -->
    <div class="space-y-8">
      <h2 class="text-center text-2xl font-bold">All Projects</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {
          allProjects.map((project) => (
            <ProjectCard
              title={project.data.title}
              description={project.data.description}
              tags={project.data.tags}
              demoUrl={project.data.demoUrl}
              githubUrl={project.data.githubUrl}
            />
          ))
        }
      </div>
    </div>

    <SkillsOverview />
  </div>
</Layout>

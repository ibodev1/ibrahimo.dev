---
import Link from '@/components/Link.astro';
import { SITE_DESCRIPTION } from '@/consts.ts';
import Default from '@/layouts/Default.astro';
import { ArrowLeft } from 'lucide-astro';

const title = '404 - Page Not Found';
---

<Default title={title} description={SITE_DESCRIPTION}>
  <div class="h-screen flex items-center justify-center flex-col gap-6">
    <h1 class="text-6xl md:text-8xl text-red-500 font-bold">404</h1>
    <p class="text-2xl md:text-4xl">
      Oops! The page you're looking for isn't here.
    </p>
    <Link href="/" class="flex items-center gap-2 group">
      <ArrowLeft class="w-5 h-5 group-hover:translate-x-1 transition" />
      Back to Home
    </Link>
  </div>
</Default>

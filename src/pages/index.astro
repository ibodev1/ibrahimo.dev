---
import { MAILTO } from "../constants/contact";
import { socialMedias } from "../constants/social";
import Layout from "../layouts/layout.astro";
---

<Layout>
  <div
    class="flex min-h-screen items-center justify-center bg-neutral-950 px-4 py-8 text-neutral-200"
  >
    <div class="w-full max-w-md text-center">
      <img
        src="/assets/pp.jpeg"
        alt="İbrahim Ödev"
        class="mx-auto mb-6 h-28 w-28 rounded-full border-2 border-neutral-800"
      />

      <h2 class="mb-1 text-2xl font-semibold text-white">İbrahim Ödev</h2>

      <p class="mb-8 text-neutral-500">@ibodev</p>

      <div class="mb-4 flex flex-col gap-3">
        {
          socialMedias.map((item) => (
            <a
              href={item.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center gap-3 rounded-lg border border-neutral-800 bg-neutral-900 px-5 py-3.5 text-neutral-200 no-underline transition-all duration-200 hover:-translate-y-0.5 hover:border-neutral-700 hover:bg-neutral-800"
            >
              <item.icon class="h-5 w-5" />
              <span class="text-sm sm:text-base">{item.title}</span>
            </a>
          ))
        }
      </div>

      <div class="mt-6">
        <a
          href={MAILTO}
          class="inline-flex items-center justify-center rounded-lg bg-white px-8 py-3 text-sm font-medium text-neutral-950 no-underline transition-all duration-200 hover:-translate-y-0.5 hover:bg-neutral-100 sm:text-base"
        >
          Contact Me
        </a>
      </div>
    </div>
  </div>
</Layout>

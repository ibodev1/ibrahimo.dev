---
import BaseHead from '@/components/BaseHead.astro';
import BottomNavigatonBox from '@/components/BottomNavigatonBox.astro';
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="bg-dark text-light font-sans relative min-h-screen max-w-full min-w-full overflow-x-hidden"
    transition:animate="none"
  >
    <main class="container mx-auto" transition:animate="fade">
      <slot />
    </main>
    <BottomNavigatonBox />
  </body>
</html>

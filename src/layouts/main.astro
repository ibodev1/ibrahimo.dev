---
import '@/styles/global.css';

import { ClientRouter } from 'astro:transitions';
import { Schema } from 'astro-seo-schema';
import { SITE_DESCRIPTION, SITE_IMAGE_PATH, SITE_TITLE, socialMedias } from '@/consts';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, image = SITE_IMAGE_PATH } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.url);
---

<html lang="en" class="dark">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" href="/rss.xml" title="İbrahim Ödev - Blog & Projects" />

    <!-- SEO Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="msapplication-TileColor" content="#0a0a0a" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>İbrahim Ödev - {title}</title>
    <meta name="title" content={`İbrahim Ödev - ${title}`} />
    <meta name="description" content={description} />
    <meta name="author" content="İbrahim Ödev" />
    <meta
      name="keywords"
      content="İbrahim Ödev, Full Stack Developer, Frontend Developer, Backend Developer, Web Development, React, Next.js, Node.js, TypeScript, TailwindCSS, Deno, HonoJS"
    />

    <!-- Verification  -->
    <meta name="google-site-verification" content="cZv4mhDeSTi4fUnD1_a_juJqAdq6hAyyxXW4Le8tHlc" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={`İbrahim Ödev - ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="İbrahim Ödev" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={`İbrahim Ödev - ${title}`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageURL} />
    <meta property="twitter:creator" content="@ibodev1" />

    <!-- Schema.org JSON-LD -->
    <Schema
      item={{
        '@context': 'https://schema.org',
        '@type': 'ProfilePage',
        mainEntity: {
          '@type': 'Person',
          name: 'İbrahim Ödev',
          alternateName: 'ibodev',
          description: description,
          image: imageURL.toString(),
          url: Astro.url.toString(),
          sameAs: socialMedias.map((social) => social.url),
          jobTitle: 'Full Stack Developer',
          knowsAbout: ['JavaScript', 'TypeScript', 'React', 'Next.js', 'Node.js', 'Deno', 'TailwindCSS']
        }
      }}
    />

    <!-- ViewTransitions -->
    <ClientRouter />

    <!-- Scroll To Top After Page Transition  -->
    <script>
      document.addEventListener('astro:after-swap', () => window.scrollTo({ left: 0, top: 0, behavior: 'instant' }));
    </script>
  </head>
  <body transition:animate="none">
    <div class="bg-background min-h-screen" transition:animate="fade">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
